<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    <WasmMainJSPath>main.js</WasmMainJSPath>
    <OutputType>Exe</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <WasmEnableThreads>true</WasmEnableThreads>
	<Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="index.html" />
    <None Remove="Styles\Editor.css" />
    <None Remove="Styles\file_piker.css" />
    <None Remove="Styles\gernal.css" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="index.html" />
    <Content Include="Styles\Editor.css" />
    <Content Include="Styles\file_piker.css" />
    <Content Include="Styles\gernal.css" />
  </ItemGroup>

  <ItemGroup>
    <WasmExtraFilesToDeploy Include="main.js" />
    <WasmExtraFilesToDeploy Include="*.js" />
    <WasmExtraFilesToDeploy Include="Scripts\*.js" />
    <WasmExtraFilesToDeploy Include="Styles\*.css" />
	<WasmExtraFilesToDeploy Include="*.html" />
  </ItemGroup>

  <ItemGroup>
    <WasmExtraFilesToDeploy Remove="Scripts\file_piker.js" />
    <WasmExtraFilesToDeploy Remove="Styles\Editor.css" />
    <WasmExtraFilesToDeploy Remove="Styles\file_piker.css" />
    <WasmExtraFilesToDeploy Remove="Styles\gernal.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="IronPython.StdLib" Version="3.4.0" />
    <PackageReference Include="Microsoft.NET.WebAssembly.Threading" Version="8.0.0-preview.5.23280.8" />
  </ItemGroup>
</Project>
